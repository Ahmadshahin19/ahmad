<odoo>
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree class="header_custom" decoration-danger="(is_late)">
                <field name="name"/>
                <field name="no"/>
                <field name="active"/>
                <field name="expected_selling_date"/>
                <field name="is_late"/>
                <field name="owner_id" optional="1"/>
                <field name="integer"/>
                <field name="bool3"/>
                <field name="state"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="float" optional="1"/>
            </tree>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <header><!--هون خلينا الحالة تظهر فوق الشيت بالفراغ-->
                    <field name="state" widget="statusbar" statusbar_visible="draft,post" options="{'clickable':1}"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_relate_owner" type="object" icon="fa-user" string="Owner"/>
                    </div>
                    <!--هيك بنظهر خط مائل باعلى الفورم مثلا للارشفة او للمرحل او للمدفوع او اي شي-->
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Posted" bg_color="text-bg-success" invisible="state != 'post'"/>
                    <header><!-- هون خلينا الحالة تظهر بالاعلى بشكل غير شكل الحقل العادي و options بتخلي المستخدم يقدر يختار بالنقر و visible بتخلي القيم هي تظهر فقط والقيم الغير موجودة هون ما بتظهر غير وقت تكون هي الحالة الفعالة-->
                        <button name="action_draft" type="object" class="btn_primary" string="Set To Darft"/>
                        <button name="action_post" type="object" class="btn_secondary" string="Post"/>
                        <button name="action_cancel" type="object" class="btn_success" string="Cancel"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,post" options="{'clickable':1}"/>
                    </header>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General Info">
                            <field name="description"/>
                            <field name="create_time" readonly="True" required="True"/>
                            <field name="next_time" readonly="True"/>
                            <field name="active"/>
                            <field name="no"/>
                            <field name="owner_id"/>
                            <field name="owner_address"/>
                            <field name="owner_phone"/>
                            <field name="integer"/>
                            <field name="date" groups="app_one.property_manager_group"/>
                        </group>
                        <group string="Additional Info">
                            <field name="float"/>
                            <field name="float2"/>
                            <field name="diff"/>
                            <field name="selection"/>
                            <field name="date_time"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="expected_selling_date"/>
                            <field name="is_late"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Badrooms">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="area"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="integer"/>

                <filter name="number_zero" string="Is Zero" domain="[('integer','=',0)]"/>
                <filter name="archive" string="Archive" domain="[('active','=',False)]"/>

                <filter name="group_integer" string="Intger" context="{'group_by': 'integer'}"/>
            </search>
        </field>
    </record>

    <record id ="property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property</field>
    </record>

    <record id ="property_closed_server_action" model="ir.actions.server">
        <field name="name">Closed</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_closed()
        </field>
    </record>

    <record id ="property_change_state_server_action" model="ir.actions.server">
        <field name="name">Change State</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_change_state_wizard()
        </field>
    </record>

    <record id ="check_selling_date_cron" model="ir.cron"> <!-- هذا الاجراء اجراء تلقائي بيتفعل كل يوم بشوف تاريخ انتهاء العروض في بروبرتي واذا انتهى مده بيعين is_late الى صح عن طريق تفعيل الميثود اللي موجودة في مديول بروبرتي-->
        <field name="name">Property: Check selling date</field>
        <field name="model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">model.check_expected_selling_date()</field>
        <field name="interval_number">1</field><!--هذا معناه كم مرة رح يشتغل الاجراء في اليوم يعني ممكن يشتغل اكثر من مرة -->
        <field name="interval_type">days</field> <!--هذا معناه يومي وفي دقيقة وفي شهري وفي ساعة واسبوع -->
        <field name="numbercall">-1</field> <!-- معناها كم مرة يتم تتكرار هذا الاجراء عدد مرات تفعيل الاجراء اذا طول العمر بنحط -1-->
        <field name="active">True</field>
    </record>

    <menuitem
        id="property_menu_item"
        name="Properties"
        parent="properties_menu"
        action="property_action"
    />
</odoo>